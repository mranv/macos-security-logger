{
    "output_dir": "./logs",
    "retention_days": 30,
    "max_file_size": 104857600,
    "save_raw_json": true,
    "json_pretty_print": true,
    "log_patterns": {
        "malware_protection": [
            "process == \"XProtectService\" OR process == \"XProtect\"",
            "process == \"MRT\"",
            "eventMessage CONTAINS[c] \"quarantine\"",
            "subsystem == \"com.apple.xprotect\"",
            "category == \"malware\""
        ],
        "system_integrity": [
            "eventMessage CONTAINS \"System Integrity Protection\"",
            "process == \"syspolicyd\"",
            "category == \"system_policy\"",
            "eventMessage CONTAINS[c] \"SIP\"",
            "eventMessage CONTAINS \"boot security\""
        ],
        "secure_hardware": [
            "category == \"secure-enclave\"",
            "eventMessage CONTAINS \"T2\"",
            "eventMessage CONTAINS \"secure boot\"",
            "subsystem == \"com.apple.security.SecureElement\""
        ],
        "privacy_control": [
            "subsystem == \"com.apple.TCC\"",
            "category == \"privacy\"",
            "process == \"tcd\"",
            "eventMessage CONTAINS \"location\"",
            "eventMessage CONTAINS[c] \"camera\" OR eventMessage CONTAINS[c] \"microphone\""
        ],
        "keychain_security": [
            "process == \"securityd\" AND eventMessage CONTAINS \"keychain\"",
            "category == \"certificate\"",
            "eventMessage CONTAINS \"identity verification\"",
            "subsystem == \"com.apple.security.keychain\""
        ],
        "sandbox_monitoring": [
            "process == \"sandboxd\"",
            "category == \"sandbox\"",
            "eventMessage CONTAINS[c] \"container access\"",
            "eventMessage CONTAINS \"entitlement\""
        ],
        "disk_encryption": [
            "process == \"filevaultd\"",
            "eventMessage CONTAINS \"FileVault\"",
            "category == \"encryption\"",
            "eventMessage CONTAINS \"recovery key\""
        ],
        "network_security": [
            "process == \"socketfilterfw\"",
            "category == \"network\"",
            "subsystem == \"com.apple.network.security\"",
            "process == \"vpnd\"",
            "eventMessage CONTAINS \"firewall\""
        ],
        "authentication": [
            "category == \"authentication\"",
            "eventMessage CONTAINS \"Touch ID\"",
            "eventMessage CONTAINS \"smart card\"",
            "eventMessage CONTAINS \"password policy\"",
            "process == \"authd\""
        ],
        "system_updates": [
            "process == \"softwareupdate\"",
            "category == \"installation\"",
            "eventMessage CONTAINS \"security update\"",
            "subsystem == \"com.apple.softwareupdate\""
        ],
        "code_signing": [
            "category == \"code-signing\"",
            "eventMessage CONTAINS \"notarization\"",
            "process == \"codesign\"",
            "eventMessage CONTAINS \"signature\""
        ],
        "mdm_security": [
            "category == \"mdm\"",
            "subsystem == \"com.apple.ManagedClient\"",
            "eventMessage CONTAINS \"profile\""
        ],
        "backup_security": [
            "process == \"backupd\"",
            "category == \"backup\"",
            "eventMessage CONTAINS \"Time Machine encryption\""
        ],
        "icloud_security": [
            "subsystem == \"com.apple.cloudd\"",
            "category == \"icloud\"",
            "eventMessage CONTAINS \"keychain sync\""
        ],
        "app_store_security": [
            "process == \"appstored\"",
            "category == \"store\"",
            "eventMessage CONTAINS \"app validation\""
        ]
    },
    "priority_events": {
        "critical": [
            "SIP violation",
            "malware detected",
            "keychain security breach",
            "unauthorized access",
            "encryption failure"
        ],
        "high": [
            "authentication failure",
            "firewall violation",
            "sandbox escape",
            "certificate invalid"
        ],
        "medium": [
            "permission change",
            "config modification",
            "update failure"
        ]
    }
}